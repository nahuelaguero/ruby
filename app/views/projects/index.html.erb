<h1>Projects listing page</h1>
<table>
  <th>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Organization</th>
     
      <%# <th>Supervisor</th> %>
      <th>Supervisor</th>
      <th>Department</th>
      <th>Office</th>
      <th>Budget</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3">Actions</th>
    </tr>
  </th>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.status %></td> 
        <td><%= project.organization.name if project.organization_id %></td>
        <td><%= project.person.name if project.person_id %></td>
        <% if project.departments.any? %>
          <% project.departments.each do |department|%>
          <td><%= department.name %></td>
          <% end %>
        <% end %>
        <td><%= project.offices.name %></td>
        <td><%= project.budget.amount if project.budget_id %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= link_to 'Show', project_path(project) %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Delete', project_path(project), method: :delete %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<p><%= link_to 'Create new Project', new_project_path %></p>
