<h1>Budgets listing page</h1>
<table>
  <th>
    <tr>
      <th>Amount</th>
      <th>Organization</th>
      <th colspan="3">Actions</th>
    </tr>
  </th>
  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.amount %> $ &nbsp;</td>
        <td><%= budget.organization.name if budget.organization_id %> &nbsp;</td>
        <td><%= link_to 'Show', budget_path(budget) %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <td><%= link_to 'Delete', budget_path(budget), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new Budget', new_budget_path %></p>
