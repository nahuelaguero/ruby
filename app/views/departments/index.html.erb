<h1>Departments listing page</h1>
<table>
  <th>
    <tr>
      <th>Name</th>
      <th>Organization</th>
      <th colspan="3">Actions</th>
    </tr>
  </th>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %> &nbsp;</td>
        <td><%= department.organization.name if department.organization_id %> &nbsp;</td>
        <td><%= link_to 'Show', department_path(department) %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Delete', department_path(department), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new Department', new_department_path %></p>
